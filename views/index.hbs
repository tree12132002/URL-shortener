<div class="container mt-5 mb-5">
  <div class="card">
    <div clas="card-body">

      <div class="mt-5">
        <h2 class="card-title text-center">URL Shortener</h2>
      </div>
      <div class="mt-5 d-flex justify-content-center">
        <span style="font-size: 10em; color: Dodgerblue;">
          <i class="fas fa-link"></i>
        </span>
      </div>

      <div class="d-flex justify-content-center">
        <form action="/urls" method="POST">
          <div class="input-group flex-nowrap mb-3" style="width: auto;">
            <input type="url" class="form-control form-control-lg" placeholder="input URL here" id="inputURL"
              name="inputURL" value="{{inputURL}}" required>
          </div>
          <div class="text-center">
            <button class="btn btn-outline-primary" type="subit">Shorten</button>
          </div>
        </form>
      </div>

      {{#if shortURL}}
      <div class="d-flex justify-content-center mt-3">
        <div>
          <h3>Success! Please use this link:</h3>
          <a style="font-size: 1.2em;" href="{{shortURL}}" id="shortURL">{{shortURL}}</a>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary" type="submit" id="copy">Copy</button>
      </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
  const copy = document.querySelector('#copy')
  const shortURL = document.querySelector('#shortURL')

  copy.addEventListener('click', function copy(event) {
    const range = document.createRange()
    range.selectNode(shortURL)
    const selection = window.getSelection()
    selection.removeAllRanges()
    selection.addRange(range)
    document.execCommand('copy')
    selection.removeAllRanges()
    alert('Copied!')
  })
</script>